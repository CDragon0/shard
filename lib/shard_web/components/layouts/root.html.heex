<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Shard" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (function() {
        var setTheme = function(theme) {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", function(e) {
          if (e.key === "phx:theme") {
            setTheme(e.newValue || "system");
          }
        });
        
        window.addEventListener("phx:set-theme", function(e) {
          setTheme(e.target.dataset.phxTheme);
        });
      })();
    </script>
  </head>
  <body>
    <div class="w-full relative z-10 flex items-center justify-between px-4 sm:px-6 lg:px-8">
      <div class="flex-shrink-0">
        <.link href={~p"/"} class="btn btn-ghost text-lg font-semibold">
          Home
        </.link>
      </div>
      <ul class="menu menu-horizontal flex items-center gap-4">
        <%= if @current_scope do %>
          <li>
            {@current_scope.user.email}
          </li>
          <%= if @current_scope.user.admin do %>
            <li>
              <.link href={~p"/admin"}>Admin</.link>
            </li>
          <% end %>
          <li>
            <.link href={~p"/users/settings"}>Settings</.link>
          </li>
          <li>
            <.link href={~p"/users/log-out"} method="delete">Log out</.link>
          </li>
        <% else %>
          <li>
            <.link href={~p"/users/register"}>Register</.link>
          </li>
          <li>
            <.link href={~p"/users/log-in"}>Log in</.link>
          </li>
        <% end %>
      </ul>
    </div>
    {@inner_content}
  </body>
</html>
